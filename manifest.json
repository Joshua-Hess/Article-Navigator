{
    "manifest_version": 2,

    "name": "Article Navigator",
    "description": "This extension searches and returns popular articles based on search keywords.",
    "version": "1.0",

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html",
        "default_title": "Search articles"
    },

    "permissions": [
        "activeTab",
        "https://ajax.googleapis.com/"
    ]
}
